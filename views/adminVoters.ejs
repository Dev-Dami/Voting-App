<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - All Voters</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="/css/tailwind.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .student-clickable {
            transition: background-color 0.2s;
        }
        .student-clickable:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans min-h-screen">
    <header class="bg-gradient-to-r from-red-700 to-red-900 text-white p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <div class="text-2xl font-extrabold tracking-tight flex items-center">
                <span>All Voters Management</span>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/admin/dashboard" class="bg-white text-red-700 px-5 py-2 rounded-full shadow-md hover:bg-gray-100 transition transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50">
                    Back to Dashboard
                </a>
                <form action="/admin/logout" method="POST">
                    <button type="submit" class="bg-white text-red-700 px-5 py-2 rounded-full shadow-md hover:bg-gray-100 transition transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50">
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <!-- Search and Filter Controls -->
    <div class="container mx-auto px-6 mt-4">
        <div class="bg-white rounded-lg shadow-md p-4 mb-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex-1">
                    <input type="text" id="searchInput" placeholder="Search students by ID..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        <option value="">All Students</option>
                        <option value="voted">Voted</option>
                        <option value="not-voted">Not Voted</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table with Enhanced UI -->
    <main class="container mx-auto p-6 mt-0">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Students List -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-bold text-gray-800">All Voters (<span id="studentCount"><%= students.length %></span>)</h2>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="studentsTable">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% students.forEach(student => { %>
                                <tr class="student-row" data-student-id="<%= student._id %>" data-student-name="<%= student.studentId %>">
                                    <td class="px-6 py-4 whitespace-nowrap cursor-pointer student-clickable" data-student-id="<%= student._id %>">
                                        <div class="text-sm font-medium text-red-700 hover:text-red-900"><%= student.studentId %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                            <%= student.hasVoted ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                            <%= student.hasVoted ? 'Voted' : 'Not Voted' %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <button data-student-id="<%= student._id %>" class="reset-password-btn bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm mr-2">
                                            Reset Password
                                        </button>
                                        <a href="/admin/student/<%= student._id %>" class="view-details-btn bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">
                                            View Details
                                        </a>
                                        <% if (student.hasVoted) { %>
                                        <form action="/admin/student/<%= student._id %>/reset-votes" method="POST" class="inline">
                                            <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 rounded text-sm ml-2" onclick="return confirm('Are you sure you want to reset the votes for this student?');">
                                                Reset Vote
                                            </button>
                                        </form>
                                        <% } %>
                                        <form action="/admin/students/delete/<%= student._id %>" method="POST" class="inline">
                                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm ml-2" onclick="return confirm('Are you sure you want to delete this student?');">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Issues Management -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Reported Issues</h2>
                <div class="overflow-y-auto max-h-96">
                    <% if (issues.length === 0) { %>
                        <p class="text-gray-600">No issues reported yet.</p>
                    <% } else { %>
                        <div class="space-y-3">
                            <% issues.forEach(issue => { %>
                                <div class="border border-gray-200 rounded-lg p-4">
                                    <div class="flex justify-between">
                                        <div>
                                            <h3 class="font-bold text-gray-800"><%= issue.name %> - <%= issue.className %></h3>
                                            <p class="text-gray-600 mt-1"><%= issue.problem %></p>
                                            <p class="text-xs text-gray-500 mt-2">Reported on: <%= new Date(issue.createdAt).toLocaleString() %></p>
                                        </div>
                                        <div>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                <%= issue.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                                   issue.status === 'in-progress' ? 'bg-blue-100 text-blue-800' :
                                                   'bg-green-100 text-green-800' %>">
                                                <%= issue.status %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="mt-3 flex space-x-2">
                                        <form action="/admin/issues/<%= issue._id %>/status" method="POST" class="inline">
                                            <input type="hidden" name="status" value="pending">
                                            <button type="submit" class="text-xs bg-yellow-500 hover:bg-yellow-600 text-white px-2 py-1 rounded">
                                                Pending
                                            </button>
                                        </form>
                                        <form action="/admin/issues/<%= issue._id %>/status" method="POST" class="inline">
                                            <input type="hidden" name="status" value="in-progress">
                                            <button type="submit" class="text-xs bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded">
                                                In Progress
                                            </button>
                                        </form>
                                        <form action="/admin/issues/<%= issue._id %>/status" method="POST" class="inline">
                                            <input type="hidden" name="status" value="resolved">
                                            <button type="submit" class="text-xs bg-green-500 hover:bg-green-600 text-white px-2 py-1 rounded">
                                                Resolved
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <!-- Reset Password Modal -->
    <div id="resetPasswordModal" class="fixed z-50 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
        role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true">
            </div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen"
                aria-hidden="true">&#8203;</span>
            <div
                class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                Reset Student Password
                            </h3>
                            <div class="mt-4">
                                <form id="resetPasswordForm" action="" method="POST">
                                    <div class="mb-4">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                                        <input type="password" name="password" id="newResetPassword" placeholder="Enter new password"
                                            class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
                                            required minlength="6">
                                    </div>
                                    <div class="mb-4">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                                        <input type="password" name="confirmPassword" id="confirmResetPassword" placeholder="Confirm new password"
                                            class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
                                            required minlength="6">
                                    </div>
                                    <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                                        <button type="submit"
                                            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                                            Reset Password
                                        </button>
                                        <button type="button" id="cancel-reset-modal-btn"
                                            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                                            Cancel
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/adminVoters.js"></script>
</body>
</html>
