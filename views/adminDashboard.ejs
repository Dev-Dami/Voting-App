        {
            "students": <%- JSON.stringify(students) %>,
            "candidates": <%- JSON.stringify(candidates) %>,
            "voteLogs": <%- JSON.stringify(voteLogs) %>,
            "election": <%- JSON.stringify(election) %>
        }
