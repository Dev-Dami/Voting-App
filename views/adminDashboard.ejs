    <script>
        // Initialize dropdown and pagination functionality
        document.addEventListener('DOMContentLoaded', function() {
            const quickActionsButton = document.getElementById('quickActionsButton');
            const quickActionsMenu = document.getElementById('quickActionsMenu');
            const quickActionsDropdown = document.getElementById('quickActionsDropdown');
            
            // Toggle dropdown
            quickActionsButton.addEventListener('click', function() {
                const isExpanded = quickActionsButton.getAttribute('aria-expanded') === 'true';
                quickActionsButton.setAttribute('aria-expanded', !isExpanded);
                quickActionsMenu.classList.toggle('hidden');
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!quickActionsDropdown.contains(event.target)) {
                    quickActionsButton.setAttribute('aria-expanded', 'false');
                    quickActionsMenu.classList.add('hidden');
                }
            });
            
            // Handle keyboard navigation
            quickActionsButton.addEventListener('keydown', function(event) {
                if (event.key === 'Enter' || event.key === ' ') {
                    event.preventDefault();
                    const isExpanded = quickActionsButton.getAttribute('aria-expanded') === 'true';
                    quickActionsButton.setAttribute('aria-expanded', !isExpanded);
                    quickActionsMenu.classList.toggle('hidden');
                } else if (event.key === 'Escape') {
                    quickActionsButton.setAttribute('aria-expanded', 'false');
                    quickActionsMenu.classList.add('hidden');
                }
            });
            
            // User filter dropdown functionality
            const userFilterButton = document.getElementById('userFilterButton');
            const userFilterMenu = document.getElementById('userFilterMenu');
            const userFilterDropdown = document.getElementById('userFilterDropdown');
            const userFilterSearch = document.getElementById('userFilterSearch');
            const filterUserOptions = document.querySelectorAll('.filter-user-option');
            const votingActivityList = document.getElementById('votingActivityList');

            
            // Variables to track pagination state

            
            // Toggle user filter dropdown
            userFilterButton.addEventListener('click', function() {
                const isExpanded = userFilterButton.getAttribute('aria-expanded') === 'true';
                userFilterButton.setAttribute('aria-expanded', !isExpanded);
                userFilterMenu.classList.toggle('hidden');
                
                if (!isExpanded) {
                    userFilterSearch.focus();
                }
            });
            
            // Close user filter dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!userFilterDropdown.contains(event.target)) {
                    userFilterButton.setAttribute('aria-expanded', 'false');
                    userFilterMenu.classList.add('hidden');
                }
            });
            
            // Handle user filter selection
            filterUserOptions.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Update active state
                    document.querySelector('.filter-user-option.active-filter').classList.remove('active-filter');
                    this.classList.add('active-filter');
                    
                    // Get selected user ID
                    const selectedUserId = this.getAttribute('data-user-id');
                    
                    // Update button text
                    userFilterButton.innerHTML = `
                        <span>${this.textContent.trim()}</span>
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    `;
                    
                    // Filter vote logs based on the selected user
                    filterVoteLogs(selectedUserId);
                    
                    // Close dropdown
                    userFilterButton.setAttribute('aria-expanded', 'false');
                    userFilterMenu.classList.add('hidden');
                });
            });
            
            // Handle user filter search
            userFilterSearch.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const options = document.querySelectorAll('#userFilterOptions .filter-user-option');
                
                options.forEach(option => {
                    const text = option.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        option.style.display = 'block';
                    } else {
                        option.style.display = 'none';
                    }
                });
            });
            
            // Function to filter vote logs by user
            function filterVoteLogs(userId) {
                const voteLogItems = document.querySelectorAll('.vote-log-item');
                
                // Show all if 'All Users' selected (empty userId)
                if (userId === '') {
                    voteLogItems.forEach(item => {
                        item.style.display = 'block';
                    });
                } else {
                    voteLogItems.forEach(item => {
                        const itemUserId = item.getAttribute('data-student-id');
                        if (itemUserId === userId) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                }
            }
            


            

            
            // Initialize WebSocket connection
            const socket = io();
            
            // Listen for real-time vote updates
            socket.on('vote_cast', function(data) {
                console.log('New vote received:', data);
                // Update the recent voting activity section
                updateVotingActivity(data);
            });
            
            // Also listen for the newVoteLog event (backup)
            socket.on('newVoteLog', function(voteLogs) {
                if (Array.isArray(voteLogs) && voteLogs.length > 0) {
                    voteLogs.forEach(log => {
                        const voteData = {
                            studentId: log.studentId ? log.studentId.studentId : "Unknown",
                            candidateName: log.candidateId ? log.candidateId.name : "Deleted Candidate",
                            createdAt: log.createdAt
                        };
                        console.log('New vote received (newVoteLog):', voteData);
                        updateVotingActivity(voteData);
                    });
                }
            });
            
            // Function to update the voting activity section with collapsible view
            function updateVotingActivity(voteData) {
                const votingActivityContainer = document.getElementById('votingActivityList');
                if (votingActivityContainer) {
                    // Get the first element to check if we need to replace it due to grouping
                    const existingStudentElements = votingActivityContainer.querySelectorAll('.student-vote-header');
                    let studentSection = null;
                    
                    // Find if this student already has a section
                    for (let i = 0; i < existingStudentElements.length; i++) {
                        if (existingStudentElements[i].getAttribute('data-student-id') === (voteData.studentId || 'unknown')) {
                            studentSection = existingStudentElements[i].closest('.bg-gray-50.rounded-lg');
                            break;
                        }
                    }
                    
                    if (studentSection) {
                        // Update existing student section
                        const detailsDiv = studentSection.querySelector('.student-vote-details');
                        const voteCountElement = studentSection.querySelector('.text-xs.text-gray-500');
                        
                        // Update vote count
                        const voteCountText = voteCountElement.textContent;
                        const currentCount = parseInt(voteCountText.match(/\d+/)[0]); // Extract the number
                        const voteText = currentCount + 1 > 1 ? 'votes' : 'vote';
                        voteCountElement.textContent = (currentCount + 1) + ' ' + voteText;
                        
                        // Add new vote to the details
                        const voteDetailHtml = `
                            <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
                                <p class="text-sm text-gray-600">
                                    Voted for ${voteData.candidateName || "Deleted Candidate"}
                                </p>
                                <span class="text-xs text-gray-400">${new Date().toLocaleTimeString()}</span>
                            </div>
                        `;
                        
                        detailsDiv.insertAdjacentHTML('afterbegin', voteDetailHtml);
                    } else {
                        // Create new student section
                        const studentSectionHtml = `
                            <div class="bg-gray-50 rounded-lg vote-log-item" data-student-id="${voteData.studentId || 'unknown'}">
                                <div class="p-3 border-b border-gray-200 cursor-pointer flex justify-between items-center student-vote-header" data-student-id="${voteData.studentId || 'unknown'}">
                                    <div>
                                        <p class="font-medium text-gray-800 flex items-center">
                                            ${voteData.studentId || "Unknown"}
                                            <svg class="w-4 h-4 ml-2 toggle-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </p>
                                        <p class="text-xs text-gray-500">1 vote</p>
                                    </div>
                                    <span class="text-xs text-gray-500">${new Date().toLocaleTimeString()}</span>
                                </div>
                                <div class="student-vote-details px-3 pb-2">
                                    <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
                                        <p class="text-sm text-gray-600">
                                            Voted for ${voteData.candidateName || "Deleted Candidate"}
                                        </p>
                                        <span class="text-xs text-gray-400">${new Date().toLocaleTimeString()}</span>
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        // Add to the top of the list
                        votingActivityContainer.insertAdjacentHTML('afterbegin', studentSectionHtml);
                    }
                    

                }
            }
        });
        
        // Add event listeners for collapsible voting activity
        document.addEventListener('click', function(event) {
            if (event.target.closest('.student-vote-header')) {
                const header = event.target.closest('.student-vote-header');
                const details = header.nextElementSibling;
                const icon = header.querySelector('.toggle-icon');
                
                if (details.classList.contains('hidden')) {
                    details.classList.remove('hidden');
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    details.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                }
            }
        });
    </script>
    
    <script src="/js/adminDashboard.js"></script>
