<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Yeshua High School Election</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="/css/tailwind.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Using CDN for socket.io -->
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        
        /* Accessibility improvements */
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }
        
        .focusable {
            outline: 2px solid transparent;
            outline-offset: 2px;
        }
        
        .focusable:focus {
            outline: 2px solid #4f46e5;
            outline-offset: 2px;
        }
    </style>
</head>

<body class="bg-gray-50 font-sans min-h-screen">
    <header class="bg-gradient-to-r from-red-700 to-red-900 text-white p-4 shadow-lg relative z-10" role="banner">
        <div class="container mx-auto flex justify-between items-center">
            <div class="text-2xl font-extrabold tracking-tight flex items-center">
                <h1>Admin Dashboard</h1>
            </div>
            <div class="flex items-center space-x-4">
                <div class="mr-6">
                    <span class="text-red-100">Status:</span>
                    <span class="font-bold text-white" aria-label="Current election status">
                        <%= election.status %>
                    </span>
                </div>
                <% if (election.status==="running" && election.endTime) { %>
                    <div id="timer" class="text-lg text-red-100">Time Left: <span id="countdown"
                            class="font-bold text-white" aria-live="polite"></span></div>
                    <% } else if (election.status==="pending" && election.startTime && election.endTime) { %>
                        <div class="text-lg text-red-100">Starts: <span class="font-bold text-white" aria-label="Election start time">
                                <%= new Date(election.startTime).toLocaleString() %>
                            </span></div>
                        <div class="text-lg text-red-100">Ends: <span class="font-bold text-white" aria-label="Election end time">
                                <%= new Date(election.endTime).toLocaleString() %>
                            </span></div>
                        <% } else if (election.status==="ended" && election.endTime) { %>
                            <div class="text-lg text-red-100">Ended: <span class="font-bold text-white" aria-label="Election end time">
                                    <%= new Date(election.endTime).toLocaleString() %>
                                </span></div>
                            <% } %>
                                <form action="/admin/logout" method="POST">
                                    <button type="submit"
                                        class="bg-white text-red-700 px-5 py-2 rounded-full shadow-md hover:bg-gray-100 transition transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 focusable"
                                        aria-label="Logout from admin dashboard">
                                        Logout
                                    </button>
                                </form>
            </div>
        </div>
    </header>

    <main class="container mx-auto p-6">
        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-red-800 text-white rounded-lg p-6">
                <div class="text-center">
                    <p class="text-red-100 text-sm font-medium">Students</p>
                    <p class="text-3xl font-bold">
                        <%= students.length %>
                    </p>
                </div>
            </div>
            <div class="bg-red-700 text-white rounded-lg p-6">
                <div class="text-center">
                    <p class="text-red-100 text-sm font-medium">Candidates</p>
                    <p class="text-3xl font-bold">
                        <%= candidates.length %>
                    </p>
                </div>
            </div>
            <div class="bg-red-600 text-white rounded-lg p-6">
                <div class="text-center">
                    <p class="text-red-100 text-sm font-medium">Total Votes</p>
                    <p class="text-3xl font-bold">
                        <%= typeof voteLogsCount !== 'undefined' ? voteLogsCount : voteLogs.length %>
                    </p>
                </div>
            </div>
            <div class="bg-red-500 text-white rounded-lg p-6">
                <div class="text-center">
                    <p class="text-red-100 text-sm font-medium">Voting Rate</p>
                    <p class="text-3xl font-bold">
                        <%= students.length> 0 ? Math.round(((typeof voteLogsCount !== 'undefined' ? voteLogsCount : voteLogs.length) / students.length) * 100) : 0 %>%
                    </p>
                </div>
            </div>
        </div>

        <!-- Election Controls -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Election Controls</h2>
            <div class="flex gap-4 flex-wrap items-center">
                <% if (election.status==="pending" ) { %>
                    <form action="/admin/election/start" method="POST" class="flex items-center gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">End Time</label>
                            <input type="datetime-local" name="endTime" required
                                class="border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <button type="submit" class="bg-red-800 hover:bg-red-900 text-white px-6 py-3 rounded-lg">
                            Start Election
                        </button>
                    </form>
                    <% } else if (election.status==="running" ) { %>
                        <form action="/admin/election/end" method="POST">
                            <button type="submit" class="bg-red-700 hover:bg-red-800 text-white px-6 py-3 rounded-lg">
                                End Election
                            </button>
                        </form>
                        <% } else if (election.status==="ended" ) { %>
                            <form action="/admin/election/reset" method="POST">
                                <button type="submit"
                                    class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg">
                                    Reset Election
                                </button>
                            </form>
                            <% } %>
            </div>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
            <!-- Left Column -->
            <div class="xl:col-span-2">

                <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Candidates by Position</h2>
                    <div class="space-y-8">
                        <% positions.forEach(position=> { %>
                            <div class="bg-gray-50 rounded-lg p-4 mb-4">
                                <h3 class="text-lg font-bold text-gray-800 mb-3">
                                    <%= position==="Custom" ? candidates.find(c=> c.position === position &&
                                        c.customPosition).customPosition : position %>
                                </h3>
                                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                    <% candidates.filter(c=> c.position === position).forEach(candidate => { %>
                                        <div class="bg-white p-4 rounded-lg border border-gray-200">
                                            <div class="text-center">
                                                <img src="<%= candidate.image %>" alt="<%= candidate.name %>"
                                                    class="w-16 h-16 rounded-full object-cover mx-auto mb-3">
                                                <h4 class="font-bold text-gray-800 mb-1">
                                                    <%= candidate.name %>
                                                </h4>
                                                <p class="text-sm text-gray-600 mb-3">
                                                    <%= candidate.votes %> votes
                                                </p>
                                                <div class="flex space-x-2">
                                                    <a href="/admin/candidate/<%= candidate._id %>/votes"
                                                        class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
                                                        View
                                                    </a>
                                                    <form action="/admin/candidates/delete/<%= candidate._id %>"
                                                        method="POST"
                                                        onsubmit="return confirm('Are you sure you want to delete this candidate?');">
                                                        <button type="submit"
                                                            class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6 overflow-y-auto">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-gray-800">Recent Voting Activity</h2>
                        <div class="relative" id="userFilterDropdown">
                            <button id="userFilterButton" 
                                    class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg text-center focusable flex items-center"
                                    aria-haspopup="true" 
                                    aria-expanded="false"
                                    aria-controls="userFilterMenu">
                                <span>Filter by User</span>
                                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div id="userFilterMenu" 
                                 class="hidden absolute right-0 mt-2 w-64 bg-white border border-gray-200 rounded-lg shadow-lg z-10 max-h-60 overflow-y-auto"
                                 role="menu" 
                                 aria-labelledby="userFilterButton">
                                <div class="p-2">
                                    <input type="text" id="userFilterSearch" placeholder="Search users..." 
                                           class="w-full p-2 border border-gray-300 rounded mb-2 focusable"
                                           aria-label="Search users to filter by">
                                    <div id="userFilterOptions">
                                        <a href="#" data-user-id="" 
                                           class="block px-4 py-2 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable filter-user-option active-filter"
                                           role="menuitem">All Users</a>
                                        <% students.forEach(student => { %>
                                            <a href="#" data-user-id="<%= student._id %>" 
                                               class="block px-4 py-2 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable filter-user-option"
                                               role="menuitem">
                                                <%= student.studentId %> 
                                                <span class="text-xs text-gray-500">
                                                    (<%= student.hasVoted ? 'Voted' : 'Not Voted' %>)
                                                </span>
                                            </a>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="space-y-3" id="votingActivityList">
                        <% 
                            // Group vote logs by student
                            const votesByStudent = {};
                            voteLogs.forEach(log => {
                                const studentId = log.studentId ? log.studentId._id : 'unknown';
                                const studentName = log.studentId ? log.studentId.studentId : 'Unknown';
                                
                                if (!votesByStudent[studentId]) {
                                    votesByStudent[studentId] = {
                                        studentName: studentName,
                                        votes: []
                                    };
                                }
                                votesByStudent[studentId].votes.push(log);
                            });
                            
                            // Get all students for display (no longer limited)
                            const studentIds = Object.keys(votesByStudent);
                        %>
                        
                        <% studentIds.forEach(studentId => { %>
                            <div class="bg-gray-50 rounded-lg vote-log-item" data-student-id="<%= studentId %>">
                                <div class="p-3 border-b border-gray-200 cursor-pointer flex justify-between items-center student-vote-header" data-student-id="<%= studentId %>">
                                    <div>
                                        <p class="font-medium text-gray-800 flex items-center">
                                            <%= votesByStudent[studentId].studentName %>
                                            <svg class="w-4 h-4 ml-2 toggle-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </p>
                                        <p class="text-xs text-gray-500"><%= votesByStudent[studentId].votes.length %> vote<%= votesByStudent[studentId].votes.length > 1 ? 's' : '' %></p>
                                    </div>
                                    <span class="text-xs text-gray-500">
                                        <%= votesByStudent[studentId].votes[0].createdAt ? new Date(votesByStudent[studentId].votes[0].createdAt).toLocaleTimeString() : "N/A" %>
                                    </span>
                                </div>
                                <div class="student-vote-details hidden px-3 pb-2">
                                    <% votesByStudent[studentId].votes.forEach(log => { %>
                                        <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
                                            <p class="text-sm text-gray-600">
                                                Voted for <%= log.candidateId ? log.candidateId.name : "Deleted Candidate" %>
                                                <% if (log.position) { %>
                                                    (<%= log.position %>)
                                                <% } %>
                                            </p>
                                            <span class="text-xs text-gray-400">
                                                <%= log.createdAt ? new Date(log.createdAt).toLocaleTimeString() : "N/A" %>
                                            </span>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <!-- Show all votes without pagination -->
                    <div class="text-center text-gray-500 text-sm mt-4">
                        Showing all <%= Object.keys(votesByStudent).length %> voter<%= Object.keys(votesByStudent).length !== 1 ? 's' : '' %>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Quick Actions</h2>
                    <div class="space-y-3">
                        <div class="relative" id="quickActionsDropdown">
                            <button id="quickActionsButton" 
                                    class="w-full bg-red-800 hover:bg-red-900 text-white px-4 py-3 rounded-lg text-center focusable"
                                    aria-haspopup="true" 
                                    aria-expanded="false"
                                    aria-controls="quickActionsMenu">
                                <span>Quick Actions Menu</span>
                                <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <div id="quickActionsMenu" 
                                 class="hidden absolute left-0 right-0 mt-2 w-full bg-white border border-gray-200 rounded-lg shadow-lg z-10"
                                 role="menu" 
                                 aria-labelledby="quickActionsButton">
                                <a href="/admin/test-charts"
                                   class="block px-4 py-3 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable"
                                   role="menuitem">
                                    View Analytics
                                </a>
                                <a href="/admin/voters"
                                   class="block px-4 py-3 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable"
                                   role="menuitem">
                                    View All Voters & Issues
                                </a>
                                <a href="/admin/export-data"
                                   class="block px-4 py-3 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable"
                                   role="menuitem">
                                    Export JSON Data
                                </a>
                                <a href="/admin/view-pdf"
                                   class="block px-4 py-3 text-gray-800 hover:bg-gray-100 border-b border-gray-100 last:border-0 focusable"
                                   role="menuitem">
                                    View/Export Results (PDF)
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Manage Students -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Manage Students</h2>
                    <form action="/admin/students/add" method="POST" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Student ID</label>
                            <input type="text" name="studentId" placeholder="Enter Student ID" required
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                            <input type="password" name="password" placeholder="Enter Password" required
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <button type="submit"
                            class="w-full bg-red-800 hover:bg-red-900 text-white px-4 py-3 rounded-lg">
                            Add Student
                        </button>
                    </form>
                    <div class="mt-4">
                        <h3 class="font-semibold text-gray-800 mb-3">Registered Students (<%= students.length %>)</h3>
                        <div class="space-y-2 max-h-48 overflow-y-auto">
                            <% students.forEach(student=> { %>
                                <div class="flex justify-between items-center bg-gray-50 p-3 rounded-lg">
                                    <div>
                                        <span class="font-medium text-gray-800">
                                            <%= student.studentId %>
                                        </span>
                                        <div class="text-xs">
                                            <span class="px-2 py-1 rounded-full text-xs
                                                <%= student.hasVoted ? (student.isSuspended ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800') : (student.isSuspended ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800') %>">
                                                <%= student.isSuspended ? 'Suspended' : (student.hasVoted ? 'Voted' : 'Not Voted') %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex space-x-2">
                                        <button data-student-id="<%= student._id %>"
                                            class="change-password-btn bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm">
                                            Change Password
                                        </button>
                                        <% if (student.isSuspended) { %>
                                        <form action="/admin/student/<%= student._id %>/enable" method="POST" class="inline">
                                            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm" onclick="return confirm('Are you sure you want to enable this student?');">
                                                Enable
                                            </button>
                                        </form>
                                        <% } else { %>
                                        <form action="/admin/student/<%= student._id %>/suspend" method="POST" class="inline">
                                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm" onclick="return confirm('Are you sure you want to suspend this student?');">
                                                Suspend
                                            </button>
                                        </form>
                                        <% } %>
                                        <form action="/admin/students/delete/<%= student._id %>" method="POST">
                                            <button type="submit"
                                                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>

                <!-- Change Password Modal -->
                <div id="passwordModal" class="fixed z-50 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
                    role="dialog" aria-modal="true">
                    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true">
                        </div>
                        <span class="hidden sm:inline-block sm:align-middle sm:h-screen"
                            aria-hidden="true">&#8203;</span>
                        <div
                            class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                                <div class="sm:flex sm:items-start">
                                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                            Change Student Password
                                        </h3>
                                        <div class="mt-4">
                                            <form id="passwordForm" action="" method="POST">
                                                <div class="mb-4">
                                                    <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                                                    <input type="password" name="password" id="newPassword" placeholder="Enter new password"
                                                        class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
                                                        required minlength="6">
                                                </div>
                                                <div class="mb-4">
                                                    <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                                                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm new password"
                                                        class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500"
                                                        required minlength="6">
                                                </div>
                                                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                                                    <button type="submit"
                                                        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                                                        Update Password
                                                    </button>
                                                    <button type="button" id="cancel-modal-btn"
                                                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Manage Candidates -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Manage Candidates</h2>
                    <form action="/admin/candidates/add" method="POST" class="space-y-4" enctype="multipart/form-data">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Candidate Name</label>
                            <input type="text" name="name" placeholder="Enter Candidate Name" required
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Position</label>
                            <select name="position" id="positionSelect" required
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500">
                                <option value="Head Boy">Head Boy</option>
                                <option value="Head Girl">Head Girl</option>
                                <option value="Sports Prefect">Sports Prefect</option>
                                <option value="Libary Prefect">Libary Prefect</option>
                                <option value="Laboratory Prefect">Laboratory Prefect</option>
                                <option value="Time Keeper">Time Keeper</option>
                                <option value="Dining-hall Prefect">Dining-hall Prefect</option>
                                <option value="Labour Prefect">Labour Prefect</option>
                                <option value="Social Prefect">Social Prefect</option>
                                <option value="Health Prefect">Health Prefect</option>
                                <option value="Chapel Prefect">Chapel Prefect</option>
                            </select>
                        </div>
                        <div id="customPositionDiv" class="hidden">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Custom Position</label>
                            <input type="text" name="customPosition" id="customPositionInput"
                                placeholder="Enter Custom Position"
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Profile Image</label>
                            <input type="file" name="image" accept="image/*"
                                class="border border-gray-300 rounded-lg w-full p-3 focus:outline-none focus:ring-2 focus:ring-red-500" />
                        </div>
                        <button type="submit"
                            class="w-full bg-red-800 hover:bg-red-900 text-white px-4 py-3 rounded-lg">
                            Add Candidate
                        </button>
                    </form>
                    <div class="mt-4">
                        <h3 class="font-semibold text-gray-800 mb-3">All Candidates (<%= candidates.length %>)</h3>
                        <div class="space-y-2 max-h-48 overflow-y-auto">
                            <% candidates.forEach(candidate=> { %>
                                <div class="flex justify-between items-center bg-gray-50 p-3 rounded-lg">
                                    <div class="flex items-center">
                                        <img src="<%= candidate.image %>" alt="<%= candidate.name %>"
                                            class="w-8 h-8 rounded-full object-cover mr-3">
                                        <div>
                                            <span class="font-medium text-gray-800">
                                                <%= candidate.name %>
                                            </span>
                                            <p class="text-xs text-gray-500">
                                                <%= candidate.position %>
                                            </p>
                                        </div>
                                    </div>
                                    <form class="delete-candidate-form" action="/admin/candidates/delete/<%= candidate._id %>" method="POST">
                                        <button type="submit"
                                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

